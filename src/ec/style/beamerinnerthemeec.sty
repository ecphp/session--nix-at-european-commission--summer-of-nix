            % \draw [help lines] (SW) grid (NE);
        \end{tikzpicture}

        \begin{tikzpicture}[remember picture, overlay]
            \node[anchor=north] at (current page.north) {
                \inserttitlegraphic
            };
        \end{tikzpicture}
    \end{beamercolorbox}

    \setcounter{framenumber}{0}
}

